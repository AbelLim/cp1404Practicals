BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_box
            size_hint_x: 0.80
            font_size: 30
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.20
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_box.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_box.text, -1)
    Button:
        text: 'Convert mile to km'
        on_press: app.handle_conversion(input_box.text)
    Label:
        id: output_box
        color: (1,1,0,1)
        font_size: 30